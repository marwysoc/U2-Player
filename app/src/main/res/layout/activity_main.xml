<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.android.u2player.MainActivity">

    <TextView
        android:id="@+id/artist_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        tools:text="U2" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        tools:text="Another Time, Another Place" />

    <ImageView
        android:id="@+id/album_cover_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/album_cover" />

    <Button
        android:id="@+id/rewind_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="<<" />

    <Button
        android:id="@+id/pause_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_cover_image_view"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/album_cover_image_view"
        tools:text="||" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/pause_button"
        android:layout_toRightOf="@+id/pause_button"
        tools:text=">" />

    <Button
        android:id="@+id/forward_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play_button"
        android:layout_toEndOf="@+id/play_button"
        android:layout_toRightOf="@+id/play_button"
        tools:text=">>" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rewind_button"
        android:layout_alignEnd="@+id/artist_text_view"
        android:layout_alignLeft="@+id/artist_text_view"
        android:layout_alignRight="@+id/artist_text_view"
        android:layout_alignStart="@+id/artist_text_view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/title_text_view"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="00:34" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignEnd="@+id/forward_button"
        android:layout_alignRight="@+id/forward_button"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="4:14" />

</RelativeLayout>
